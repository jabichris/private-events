<h1>Create a new Event</h1>

<%= form_for @event do |f| %>
   <%= f.text_field :title %><br>
   <%= f.label :description, value: 'Event description: '%>
   <%= f.text_field :description %><br>
   <%= f.label :location, value: 'Location: '%>
   <%= f.text_field :location %><br>
   <%= f.label :date, value: 'Date: ' %>
   <%= f.date_field :date, min: Date.new(2000, 01, 01), max:Date.new(2050, 12, 31) %><br>
   <%= label_tag 'Time: ' %>
   <%= time_field_tag 'date_time' %><br>
   <%= f.label :accessibility, value: 'Make this event private: '%>
   <%= f.check_box :accessibility %><br><br>
   <%= f.submit "Create" %>
<% end %>